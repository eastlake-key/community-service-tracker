{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": ["ES2017"]
  },

  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
