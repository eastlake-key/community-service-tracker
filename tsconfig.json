/* Wilcard tsconfig.json for any code reused across several project folders */
{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": ["ES2017"],
    "skipLibCheck": true,
    "noEmit": true
  },

  "include": ["Cache/**/*"],
  "exclude": ["node_modules"]
}
